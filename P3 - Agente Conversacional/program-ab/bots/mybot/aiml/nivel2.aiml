                <condition var="valor">
                  <li value="null"></li>
                  <li>
                    <condition var="salida">
                      <li value="unknown"><set var="salida"><get var="valor"/></set></li>
                      <li><set var="salida"><get var="salida"/>, <get var="valor"/></set></li>
